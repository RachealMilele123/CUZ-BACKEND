# Local MongoDB (for development)
MONGO_URI_LOCAL=mongodb://localhost:27017/zambiabank

# Cloud MongoDB (for production/Vercel) - Replace with your MongoDB Atlas connection string
MONGO_URI_CLOUD=mongodb+srv://username:password@cluster.mongodb.net/zambiabank?retryWrites=true&w=majority

# Fallback URI (will be used if specific URIs are not set)
MONGO_URI=mongodb://localhost:27017/zambiabank

PORT=8000
JWT_SECRET=your_jwt_secret_key_here

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_FROM=Your Bank <your_bank_email@gmail.com>

# Environment (development/production)
NODE_ENV=development
