# MongoDB Atlas connection string (required for production)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/databasename

# Server port (Vercel will override this)
PORT=8000

# JWT secret for authentication
JWT_SECRET=your_secure_jwt_secret_key_here

# Email configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=Your Bank <your-email@gmail.com>